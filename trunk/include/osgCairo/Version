#ifndef OSGCAIRO_VERSION
#define OSGCAIRO_VERSION

#include <osgCairo/Export>

extern "C" {

#define OSGCAIRO_MAJOR_VERSION 1
#define OSGCAIRO_MINOR_VERSION 2
#define OSGCAIRO_PATCH_VERSION 0

#define OSGCAIRO_MIN_VERSION_REQUIRED(MAJOR, MINOR, PATCH) ((OSGCAIRO_MAJOR_VERSION>MAJOR) || (OSGCAIRO_MAJOR_VERSION==MAJOR && (OSGCAIRO_MINOR_VERSION>MINOR || (OSGCAIRO_MINOR_VERSION==MINOR && OSGCAIRO_PATCH_VERSION>=PATCH))))
#define OSGCAIRO_VERSION_LESS_THAN(MAJOR, MINOR, PATCH) ((OSGCAIRO_MAJOR_VERSION<MAJOR) || (OSGCAIRO_MAJOR_VERSION==MAJOR && (OSGCAIRO_MINOR_VERSION<MINOR || (OSGCAIRO_MINOR_VERSION==MINOR && OSGCAIRO_PATCH_VERSION<PATCH))))
#define OSGCAIRO_VERSION_LESS_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGCAIRO_MAJOR_VERSION<MAJOR) || (OSGCAIRO_MAJOR_VERSION==MAJOR && (OSGCAIRO_MINOR_VERSION<MINOR || (OSGCAIRO_MINOR_VERSION==MINOR && OSGCAIRO_PATCH_VERSION<=PATCH))))
#define OSGCAIRO_VERSION_GREATER_THAN(MAJOR, MINOR, PATCH) ((OSGCAIRO_MAJOR_VERSION>MAJOR) || (OSGCAIRO_MAJOR_VERSION==MAJOR && (OSGCAIRO_MINOR_VERSION>MINOR || (OSGCAIRO_MINOR_VERSION==MINOR && OSGCAIRO_PATCH_VERSION>PATCH))))
#define OSGCAIRO_VERSION_GREATER_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGCAIRO_MAJOR_VERSION>MAJOR) || (OSGCAIRO_MAJOR_VERSION==MAJOR && (OSGCAIRO_MINOR_VERSION>MINOR || (OSGCAIRO_MINOR_VERSION==MINOR && OSGCAIRO_PATCH_VERSION>=PATCH))))

}

#endif

